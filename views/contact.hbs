<h1 class='text-center'>Contact Us</h1>

<form class='col-md-6 col-md-offset-3' method="post">
    {{#each errorMessages}}
        <div class='alert alert-danger'>
            {{this.msg}}
        </div>
    {{/each}}
  <div class="form-group">
    <label for="name">Name</label>
    <input name='name' class="form-control" placeholder="Your Name" value={{name}}>
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name='email' type="email" class="form-control" placeholder="Enter Your Email" value={{email}}>
  </div>
  <div class="form-group">
    <label>Message</label>
    <textarea name='message' class="form-control"  rows="3">{{message}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>